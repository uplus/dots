kill(){
  if (($# != 0)); then
    command kill $@
  else
    ps --no-headers -u "${USER}" -o pid,cmd | peco | awk '$0=$1' | xargs kill -KILL --verbose
  fi
}

pgkill() {
  pattern="${1:? process grep name}"
  # brewのpgrepだと -a が使えない
  pgrep -il "${pattern}"

  if (($? != 0)); then
    warn 'not matched'
    return
  fi

  if read -q '?pkill -9 (y/N) '; then
    pkill -9 "${pattern}"
    pgrep -il "${pattern}"
    return 0
  fi
}

