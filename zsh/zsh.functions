    eval "${*}"
    echo "---- [finished] $(date-now) ----"
    echo
    sleep 0.5
  done
}

endless-read() {
  while :; do
    echo
    echo "#-#-# [start] $(date-now) #-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#"
    echo "${*}"
    eval "${*}"
    echo "---- [finished] $(date-now) ----"
    echo
    read
  done
}

